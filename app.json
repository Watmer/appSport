{
  "expo": {
    "name": "SportAppDev",
    "slug": "SportApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sportappdev",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00a000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.SportAppDev"
    },
    "android": {
      "package": "com.anonymous.SportAppDev",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon/foreground.png",
        "backgroundColor": "#00a000"
      },
      "edgeToEdgeEnabled": true,
      "enableBackgroundNotification": true,
      "useNextNotificationsApi": true
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain"
        }
      ],
      "expo-sqlite",
      "expo-audio",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "Hello",
              "label": "Hello Widget",
              "description": "Un widget de prueba",
              "minWidth": "160dp",
              "minHeight": "110dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "updatePeriodMillis": 0,
              "widgetFeatures": "reconfigurable|configuration_optional"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "bc23b1ce-4445-46c8-8787-4a828aaa4306"
      }
    },
    "owner": "watmer"
  }
}